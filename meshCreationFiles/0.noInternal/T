        type            wedge;
    }
    back
    {
        type            wedge;
    }
    walls
    {
        type            zeroGradient;
    }
    fuelInlet
    {
        //
        type            fixedValue;
        value           uniform 500;
        //
        //type            zeroGradient;
    }
    oxidizerInlet
    {
        /*
        type            fixedValue;
        value           uniform 320;
        */
        type            zeroGradient;
    }
    outlet
    {
        type            zeroGradient;
        /*
        type            totalTemperature;
        gamma           1.192;
        T0              uniform 500;
        value           uniform 500;
        */
    }
    axis
    {
        type            empty;
    }
}


